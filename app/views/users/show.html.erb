<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>
<p><%= @user.name %></p>
<p><%= @user.email %></p>

<ul>
    <% @user.created_events.each do |event| %>
    <li><%= event.name %></li>
    <li><%= event.location %></li>
    <li><%= event.date_event %></li>
    <% end %>
</ul>



<ul>
    <% @upcoming_events.each do |event| %>
    <li><%= event.name %></li>
    <li><%= event.location %></li>
    <li><%= event.date_event %></li>
    <% end %>
</ul>



<ul>
    <% @prev_events.each do |event| %>
    <li><%= event.name %></li>
    <li><%= event.location %></li>
    <li><%= event.date_event %></li>
    <% end %>
</ul>


